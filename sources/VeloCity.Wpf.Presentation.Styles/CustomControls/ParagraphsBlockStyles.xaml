<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:customControls="clr-namespace:DustInTheWind.VeloCity.Wpf.Presentation.CustomControls;assembly=DustInTheWind.VeloCity.Wpf.Presentation.CustomControls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Pack://application:,,,/DustInTheWind.VeloCity.Wpf.Presentation.Styles;component/Skins/DarkSkin.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style 
        TargetType="{x:Type ContentPresenter}" 
        x:Key="ParagraphsBlockFirstItemStyle" />

    <Style 
        TargetType="{x:Type ContentPresenter}" 
        x:Key="ParagraphsBlockNormalItemStyle">

        <Setter Property="Margin" Value="0 15 0 0"/>
    </Style>

    <Style 
        TargetType="{x:Type ContentPresenter}" 
        x:Key="ParagraphsBlockLastItemStyle">

        <Setter Property="Margin" Value="0 15 0 0"/>
    </Style>


    <customControls:ListItemStyleSelector
        x:Key="ListItemStyleSelector"
        FirstItemStyle="{StaticResource ParagraphsBlockFirstItemStyle}"
        NormalItemStyle="{StaticResource ParagraphsBlockNormalItemStyle}"
        LastItemStyle="{StaticResource ParagraphsBlockLastItemStyle}"/>

    <Style TargetType="{x:Type customControls:ParagraphsBlock}" BasedOn="{StaticResource {x:Type ItemsControl}}">

        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="ItemContainerStyleSelector" Value="{StaticResource ListItemStyleSelector}" />

        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate>
                    <ContentPresenter
                        Content="{Binding}">

                        <ContentPresenter.Resources>
                            <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource {x:Type TextBlock}}">
                                <Setter Property="TextWrapping" Value="Wrap" />
                            </Style>
                        </ContentPresenter.Resources>
                    </ContentPresenter>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>