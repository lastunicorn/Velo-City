<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:styles="clr-namespace:DustInTheWind.VeloCity.Wpf.Presentation.Styles">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Pack://application:,,,/DustInTheWind.VeloCity.Wpf.Presentation.Styles;component/Themes/Constants.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="NotesBlockFirstItemStyle">
        <Setter Property="Control.Margin" Value="0" />
    </Style>

    <Style x:Key="NotesBlockNormalItemStyle">
        <Setter Property="Control.Margin" Value="0 10 0 0" />
    </Style>

    <Style x:Key="NotesBlockLastItemStyle">
        <Setter Property="Control.Margin" Value="0 10 0 0" />
    </Style>

    <Style TargetType="{x:Type styles:NotesBlock}">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource DefaultFontSize}" />
        <Setter Property="Foreground" Value="{StaticResource FontPrimaryBrush}" />
        <Setter Property="Background" Value="{StaticResource PrimaryLightBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="IsTabStop" Value="False" />

        <Setter Property="ItemContainerStyleSelector">
            <Setter.Value>
                <styles:ListItemStyleSelector
                    FirstItemStyle="{StaticResource NotesBlockFirstItemStyle}"
                    NormalItemStyle="{StaticResource NotesBlockNormalItemStyle}"
                    LastItemStyle="{StaticResource NotesBlockLastItemStyle}" />
            </Setter.Value>
        </Setter>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type styles:NotesBlock}">

                    <styles:InfoBlock
                        Background="{TemplateBinding Background}"
                        Foreground="{TemplateBinding Foreground}"
                        Padding="{TemplateBinding Padding}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}">

                        <ItemsPresenter />

                    </styles:InfoBlock>

                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate>
                    <ContentControl
                        Content="{Binding}"
                        IsTabStop="False">

                        <ContentControl.Resources>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="TextWrapping" Value="Wrap" />
                            </Style>
                        </ContentControl.Resources>

                    </ContentControl>
                </DataTemplate>
            </Setter.Value>
        </Setter>

    </Style>
</ResourceDictionary>