<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:customControls="clr-namespace:DustInTheWind.VeloCity.Wpf.Presentation.CustomControls;assembly=DustInTheWind.VeloCity.Wpf.Presentation.CustomControls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Pack://application:,,,/DustInTheWind.VeloCity.Wpf.Presentation.Styles;component/Themes/Constants.xaml" />
        <ResourceDictionary Source="Pack://application:,,,/DustInTheWind.VeloCity.Wpf.Presentation.Styles;component/Themes/CustomControls/InfoPointStyles.xaml" />
        <ResourceDictionary Source="Pack://application:,,,/DustInTheWind.VeloCity.Wpf.Presentation.Styles;component/Themes/Icons/InfoContrctIconStyles.xaml" />
        <ResourceDictionary Source="Pack://application:,,,/DustInTheWind.VeloCity.Wpf.Presentation.Styles;component/Themes/Icons/InfoPartialVacationIconStyles.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

    <Style TargetType="{x:Type customControls:TeamMemberAbsenceControl}">

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type customControls:TeamMemberAbsenceControl}">
                    <StackPanel Orientation="Horizontal">

                        <ContentPresenter />

                        <customControls:InfoPoint
                            IconGeometry="{StaticResource InfoContractIconGeometry}"
                            Visibility="{Binding IsMissingByContract, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}"
                            IconForeground="Chocolate"
                            Margin="5 0 0 0">

                            <customControls:InfoPoint.InfoContent>
                                <customControls:ParagraphsBlock>
                                    <StackPanel Orientation="Horizontal">
                                        <customControls:GenericIcon
                                            Style="{StaticResource InfoContractIconStyle}"
                                            Width="12"
                                            Height="12"
                                            Margin="0 0 5 0"
                                            Foreground="Chocolate" />
                                        <TextBlock Text="Absent by contract" />
                                    </StackPanel>
                                    <TextBlock Text="The user is not working in this day according to the contract." />
                                </customControls:ParagraphsBlock>
                            </customControls:InfoPoint.InfoContent>

                        </customControls:InfoPoint>

                        <customControls:InfoPoint
                            IconGeometry="{StaticResource InfoPartialVacationIconGeometry}"
                            Visibility="{Binding IsPartialVacation, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}"
                            IconForeground="Chocolate"
                            Margin="5 0 0 0">

                            <customControls:InfoPoint.InfoContent>
                                <customControls:ParagraphsBlock>
                                    <StackPanel Orientation="Horizontal">
                                        <customControls:GenericIcon
                                            Style="{StaticResource InfoPartialVacationIconStyle}"
                                            Width="12"
                                            Height="12"
                                            Margin="0 0 5 0"
                                            Foreground="Chocolate" />
                                        <TextBlock Text="Partial-day vacation" />
                                    </StackPanel>
                                    <TextBlock Text="The user is missing a few hours in this day. Not the whole day." />
                                </customControls:ParagraphsBlock>
                            </customControls:InfoPoint.InfoContent>

                        </customControls:InfoPoint>

                        <TextBlock x:Name="Separator" Text="   " />

                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>

</ResourceDictionary>