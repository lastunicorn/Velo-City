<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:styles="clr-namespace:DustInTheWind.VeloCity.Wpf.Presentation.Styles"
    xmlns:converters="clr-namespace:DustInTheWind.VeloCity.Wpf.Presentation.Styles.Converters">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Pack://application:,,,/DustInTheWind.VeloCity.Wpf.Presentation.Styles;component/Themes/Constants.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />

    <Style TargetType="{x:Type styles:PropertyGroupsView}">
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="IsTabStop" Value="False"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <StackPanel Grid.IsSharedSizeScope="True">
                        <ItemsPresenter />
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate>

                    <DockPanel Margin="0 0 0 20">

                        <Border
                            DockPanel.Dock="Top"
                            BorderThickness="0 0 0 1"
                            BorderBrush="{StaticResource BorderBrush}"
                            Margin="0 0 0 5"
                            SnapsToDevicePixels="True"
                            Visibility="{Binding Title, Converter={StaticResource NullToVisibilityConverter}}">

                            <TextBlock
                                FontSize="18"
                                FontWeight="DemiBold"
                                Text="{Binding Title}"
                                Margin="0 0 0 2" />
                        </Border>

                        <styles:PropertyGroupView
                            ItemsSource="{Binding Items}"
                            Margin="0 3 0 0"
                            Visibility="{Binding Items, Converter={StaticResource NullToVisibilityConverter}}" />

                    </DockPanel>

                </DataTemplate>
            </Setter.Value>
        </Setter>

    </Style>

</ResourceDictionary>