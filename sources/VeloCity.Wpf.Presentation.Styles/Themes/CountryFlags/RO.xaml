    <ControlTemplate x:Key="CountryFlag_RO">
        <Viewbox Stretch="Uniform">
            <Canvas Height="2" Width="3">
                <Rectangle Width="3" Height="2" Canvas.Left="0" Canvas.Top="0" Fill="#002B7F" />
