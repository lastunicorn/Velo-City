<Window
    x:Class="DustInTheWind.VeloCity.Wpf.Presentation.Pages.StartSprintConfirmation.StartSprintConfirmationWindow"

    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:startSprintConfirmation="clr-namespace:DustInTheWind.VeloCity.Wpf.Presentation.Pages.StartSprintConfirmation"
    xmlns:converters="clr-namespace:DustInTheWind.VeloCity.Wpf.Presentation.Converters"

    mc:Ignorable="d"
    Title="Start Sprint"
    Height="400"
    Width="640"
    WindowStartupLocation="CenterOwner"
    ShowInTaskbar="False"
    ResizeMode="CanResizeWithGrip"
    WindowStyle="SingleBorderWindow"
    d:DataContext="{d:DesignInstance startSprintConfirmation:StartSprintConfirmationViewModel}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Pack://application:,,,/DustInTheWind.VeloCity.Wpf.Presentation.Styles;component/Themes/StandardControls/StandardControlStyles.xaml" />
                <ResourceDictionary Source="Pack://application:,,,/DustInTheWind.VeloCity.Wpf.Presentation.Styles;component/Themes/Constants.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:StoryPointsToNumberConverter x:Key="StoryPointsToNumberConverter" />
        </ResourceDictionary>
    </Window.Resources>

    <Window.Style>
        <StaticResource ResourceKey="WindowStyle" />
    </Window.Style>

    <DockPanel>

        <Border
            DockPanel.Dock="Top"
            MinHeight="50"
            Background="{StaticResource PrimaryDarkBrush}"
            Padding="30 20">

            <Border.Resources>
                <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource {x:Type TextBlock}}">
                    <Setter Property="FontSize" Value="24"></Setter>
                </Style>
            </Border.Resources>

            <TextBlock VerticalAlignment="Center">
                <TextBlock Text="Start Sprint" />
                <TextBlock Text="{Binding SprintNumber}" />
                <TextBlock Text="-" />
                <TextBlock Text="{Binding SprintName}" />
            </TextBlock>
        </Border>

        <Border
            DockPanel.Dock="Bottom"
            Background="{StaticResource PrimaryDarkBrush}"
            Padding="30 10">

            <StackPanel
                Orientation="Horizontal"
                FlowDirection="RightToLeft">

                <Button
                    Content="Cancel"
                    IsCancel="True"
                    MinWidth="100" />

                <Button
                    Content="Ok"
                    IsDefault="True"
                    MinWidth="100"
                    Click="ButtonBase_OnClick"/>

            </StackPanel>
        </Border>

        <Grid Margin="30">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Text="Commitment Story Points"
                VerticalAlignment="Center" />

            <TextBox
                Grid.Row="0"
                Grid.Column="2"
                Text="{Binding CommitmentStoryPoints, Converter={StaticResource StoryPointsToNumberConverter}}" />

            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Text="Description"
                VerticalAlignment="Center" />

            <TextBox
                Grid.Row="1"
                Grid.Column="2"
                Text="{Binding Description}"
                Style="{StaticResource MultilineTextBoxStyle}"
                Margin="0 10 0 0" />
        </Grid>

    </DockPanel>

</Window>