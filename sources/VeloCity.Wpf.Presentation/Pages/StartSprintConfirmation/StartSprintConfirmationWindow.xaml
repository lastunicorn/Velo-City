<customControls:OkCancelWindow
    x:Class="DustInTheWind.VeloCity.Wpf.Presentation.Pages.StartSprintConfirmation.StartSprintConfirmationWindow"

    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:startSprintConfirmation="clr-namespace:DustInTheWind.VeloCity.Wpf.Presentation.Pages.StartSprintConfirmation"
    xmlns:converters="clr-namespace:DustInTheWind.VeloCity.Wpf.Presentation.Converters"
    xmlns:customControls="clr-namespace:DustInTheWind.VeloCity.Wpf.Presentation.CustomControls;assembly=DustInTheWind.VeloCity.Wpf.Presentation.CustomControls"

    mc:Ignorable="d"
    Title="{Binding Title}"
    Height="480"
    Width="640"
    WindowStartupLocation="CenterOwner"
    ShowInTaskbar="False"
    ResizeMode="CanResizeWithGrip"
    WindowStyle="None"
    d:DataContext="{d:DesignInstance startSprintConfirmation:StartSprintConfirmationViewModel}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Pack://application:,,,/DustInTheWind.VeloCity.Wpf.Presentation.Styles;component/Themes/Constants.xaml" />
                <ResourceDictionary Source="Pack://application:,,,/DustInTheWind.VeloCity.Wpf.Presentation.Styles;component/Themes/StandardControls/StandardControlStyles.xaml" />
                <ResourceDictionary Source="Pack://application:,,,/DustInTheWind.VeloCity.Wpf.Presentation.Styles;component/Themes/CustomControls/StartIconStyles.xaml" />
                <ResourceDictionary Source="Pack://application:,,,/DustInTheWind.VeloCity.Wpf.Presentation.Styles;component/Themes/CustomControls/OkCancelWindowStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:StoryPointsToNumberConverter x:Key="StoryPointsToNumberConverter" />
        </ResourceDictionary>
    </Window.Resources>

    <Window.Style>
        <StaticResource ResourceKey="{x:Type customControls:OkCancelWindow}" />
    </Window.Style>

    <customControls:OkCancelWindow.TitleIcon>
        <customControls:StartIcon />
    </customControls:OkCancelWindow.TitleIcon>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Text="Estimated Story Points:"
            VerticalAlignment="Top" />

        <TextBlock
            Grid.Row="0"
            Grid.Column="2"
            Text="{Binding EstimatedStoryPoints, StringFormat=standard}"
            MinHeight="35"
            VerticalAlignment="Center" />

        <Label
            Grid.Row="1"
            Grid.Column="0"
            Content="_Commitment Story Points:"
            VerticalAlignment="Center"
            Target="TextBoxCommitmentStoryPoints" />

        <TextBox
            Grid.Row="1"
            Grid.Column="2"
            x:Name="TextBoxCommitmentStoryPoints"
            Text="{Binding CommitmentStoryPoints, Converter={StaticResource StoryPointsToNumberConverter}}"
            TabIndex="1"
            Margin="0 3 0 0" />

        <Label
            Grid.Row="2"
            Grid.Column="0"
            Content="Sprint's _Goal:"
            VerticalAlignment="Center"
            Target="TextBoxSprintGoal" />

        <TextBox
            Grid.Row="2"
            Grid.Column="2"
            x:Name="TextBoxSprintGoal"
            Text="{Binding SprintGoal}"
            TabIndex="2"
            Style="{StaticResource MultilineTextBoxStyle}"
            Margin="0 20 0 0" />
    </Grid>

</customControls:OkCancelWindow>