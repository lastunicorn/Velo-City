<Window
    x:Class="DustInTheWind.VeloCity.Wpf.Presentation.Views.MainWindow"

    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="clr-namespace:DustInTheWind.VeloCity.Wpf.Presentation.Converters"
    xmlns:views="clr-namespace:DustInTheWind.VeloCity.Wpf.Presentation.Views"
    xmlns:viewModels="clr-namespace:DustInTheWind.VeloCity.Wpf.Presentation.ViewModels"

    mc:Ignorable="d"
    Title="{Binding Title}"
    Width="1024"
    Height="768"
    d:DataContext="{d:DesignInstance viewModels:MainViewModel}"
    Background="#EAE7DD"
    ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Pack://application:,,,/DustInTheWind.VeloCity.Wpf.Presentation.Styles;component/Themes/StandardControls/StandardControlStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
            <converters:NullToVisibilityConverter Inverse="True" x:Key="NullToVisibilityInverseConverter" />
            <converters:SprintStateToStrokeBrushConverter x:Key="SprintStateToStrokeBrushConverter" />
            <converters:SprintStateToFillBrushConverter x:Key="SprintStateToFillBrushConverter" />
        </ResourceDictionary>
    </Window.Resources>

    <Grid
        Margin="20">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ListView
            Grid.Column="0"
            ItemsSource="{Binding Sprints}"
            SelectedItem="{Binding SelectedSprint}">

            <ListView.ItemTemplate>
                <DataTemplate>
                    <DockPanel>

                        <Ellipse
                            Width="16"
                            Height="16"
                            StrokeThickness="3"
                            Stroke="{Binding SprintState, Converter={StaticResource SprintStateToStrokeBrushConverter}}"
                            Fill="{Binding SprintState, Converter={StaticResource SprintStateToFillBrushConverter}}"
                            StrokeLineJoin="Round"
                            StrokeStartLineCap="Flat"
                            StrokeEndLineCap="Flat" />

                        <TextBlock
                            Text="{Binding}"
                            Margin="10 5" />
                    </DockPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <GridSplitter
            Grid.Column="1"
            Width="8"
            HorizontalAlignment="Stretch"
            Margin="10 0" />

        <TextBlock
            Grid.Column="2"
            Visibility="{Binding SprintOverview, Converter={StaticResource NullToVisibilityInverseConverter}}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="20"
            Text="Select a Sprint"
            IsEnabled="False" />

        <Grid
            Grid.Column="2"
            Visibility="{Binding SprintOverview, Converter={StaticResource NullToVisibilityConverter}}">

            <DockPanel>

                <TextBlock
                    DockPanel.Dock="Top"
                    Text="{Binding DetailsTitle}"
                    FontSize="25"
                    Margin="0 0 0 20" />

                <TabControl>
                    <TabItem Header="Overview">
                        <views:SprintOverviewView
                            DataContext="{Binding SprintOverview}"
                            Margin="20" />
                    </TabItem>
                    <TabItem Header="Calendar">
                        <views:SprintCalendarView
                            DataContext="{Binding SprintCalendar}"
                            Margin="20" />
                    </TabItem>
                    <TabItem Header="Team Members">
                        <TextBlock
                            Text="Work in progress"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            FontSize="20"
                            Foreground="{StaticResource DisabledFontBrush}" />
                    </TabItem>
                </TabControl>


            </DockPanel>

        </Grid>

    </Grid>

</Window>